<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tvCustomerProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fugu_size_57</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/fugu_padding_5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:paddingLeft">@dimen/fugu_padding_10</item>
        <item name="android:textColor">@color/fugu_text_color_primary</item>
        <item name="android:textSize">@dimen/fugu_text_size_large</item>
    </style>

    <style name="AppTheme.StatusBarTransparent" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>