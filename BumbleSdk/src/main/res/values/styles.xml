    <style name="primaryText" parent="CustomTextAppearance">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="title" parent="hippo_semibold_text">
        <item name="android:textSize">@dimen/fugu_text_size_medium</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Profile.Title" parent="title">
        <item name="android:textSize">@dimen/fugu_text_size_intermediate</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fugu_dp_40</item>
        <item name="android:paddingStart">@dimen/hippo_margin_16</item>
    </style>

    <style name="receivedText" parent="primaryText">
        <item name="android:textColor">@color/fugu_white</item>
        <item name="android:textColorLink">@color/fugu_text_color_primary</item>
