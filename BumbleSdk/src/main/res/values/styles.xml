    </style>

    <style name="receivedText.time" parent="primaryText">
        <item name="android:textColor">@color/fugu_white_70</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="sentText" parent="primaryText">
        <item name="android:textColor">@color/fugu_text_color_primary</item>
        <item name="android:textColorLink">@color/fugu_text_color_primary</item>
        <!--<item name="android:lineSpacingExtra">@dimen/lineSpacingExtra</item>-->
    </style>

